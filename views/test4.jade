extends layout

block content
    //这里写样式//
    style.
        body {
            background: url('/images/react-cover.jpg');
            background-size: cover;
        }
        h2 {
            text-align: center;
            margin: 30px 0 15px 0;
        }
        .wrap {
            width: 100%;
            height: 580px;
        }
        .leftbar {
            width: 400px;
            height: 500px;
            border: 1px solid #333;
            margin-right: 40px;
            padding: 30px 30px 0 30px;
            box-shadow: 5px -5px 5px #666;
            position: absolute;
            left: 0;
        }
        h3 {
            margin-bottom: 15px;
        }
        .right {
            width: 100%;
            height: 500px;
            position: absolute;
            left: 0;
        }
        .rightcontent {
            height: 500px;
            margin-left: 500px;
            padding-top: 30px;
            border: 1px solid #333;
            box-shadow: -5px -5px 5px #666;
        }
        video {
            display: block;
            width: 80%;
            height: 440px;
            margin-left: 10%;
            margin-right: 10%;
            margin-bottom: 30px;
        }
        .right p {
            margin-top: 10px;
            text-align: center;

        }
        .linksBar a {
            display: inline-block;
            width: 33%;
            line-height: 50px;
            color: #fff;
            background: #000;
            border: 1px solid #fff;
            text-align: center;
            text-decoration: none;
            float: left;
        }
        .linksBar a:hover {
            background: #444;
        }
    //样式完毕//

